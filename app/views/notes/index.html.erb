<p id="notice"><%= notice %></p>

<h3>Your Notes</h3>

<table class = "table">
  <thead>
    <tr>
      <th>User</th>
      <th>Task</th>
      <th>Created on</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.user.email %></td>
        <td><%= note.task_id %></td>
        <td><%= note.created_on %></td>
        <td><%= note.note %></td>
        <td><%= link_to 'Show', note, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_note_path(note), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path, class: "btn btn-primary" %>
