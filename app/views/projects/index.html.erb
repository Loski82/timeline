<p id="notice"><%= notice %></p>

<h3>Your CB Timelines</h3>

<table class = "table">
  <thead>
    <tr>
      <th>Created on</th>
      <th>Timeline name</th>
      <th>Timeline description</th>
      <th>Created By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.created_on %></td>
        <td><%= project.project_name %></td>
        <td><%= project.project_description %></td>
        <td><%= project.user.email %></td>
        <td><%= link_to 'Show', project, class: "btn btn-success" %>
        <td><%= link_to 'Edit', edit_project_path(project), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure you want to delete your timeline?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create a New Timeline', new_project_path, class: "btn btn-primary" %>

